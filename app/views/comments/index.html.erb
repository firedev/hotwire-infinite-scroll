<p style="color: green"><%= notice %></p>

<h1>Comments</h1>

<div id="comments">
  <%= render @comments %>
  <% @comments.each do |comment| %>
    <%= render comment %>
    <p>
      <%= link_to "Show this comment", comment %>
    </p>
  <% end %>
</div>

<%= link_to "New comment", new_comment_path %>
<div id="next_link">
  <%= button_to "next", pagy_url_for(@pagy, @pagy.next) %>
</div>
